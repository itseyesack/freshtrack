<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style for standard buttons -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/colorPrimary</item> <!-- Use backgroundTint -->
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:background">@color/card_background</item> <!-- Background for the EditText -->
    </style>

    <!-- Styles for Pantry -->
    <style name="PantryItemTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PantryItemDetailTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PantryItemDetailTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PantryItemDetailBodyStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Add more styles as needed for other view types -->
</resources>